pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('checkout'){
            steps {
                script {
                    cleanWs()
		    git credentialsId: '30e5c241-abe9-4a76-b943-99b3b0605291', url: 'https://github.com/ystroog/devops.git'
                    sh 'ls'
                }
            }
        } 
		stage('Ansible Playbook') {
            steps {
                dir ('Devops/elastic/'){
                script { 
                targetIP = input(
                            id: 'userInput', message: 'ip add',
                            parameters: [
                                string(defaultValue: '0.0.0.0',
                                       description: 'ip address',
                                       name: 'IP')])
                    }
				}
			}
		}
        stage('Ansible Playbokk running') {
            steps {
	    	dir ('Devops/elastic/'){
	    	sh "ls"
                sh "sed -i 's/host_ip/${targetIP}/g' hosts"
                sh 'cat hosts'
                sh "ansible-playbook -i hosts  -u ubuntu -b  --private-key=/var/jenkins_home/ansible/devepo2.pem --extra-var master=docker playbook.yml "
		sh "ansible-playbook -i hosts  -u ubuntu -b  --private-key=/var/jenkins_home/ansible/devepo2.pem --extra-vars master=els playbook.yml"
		sh "ansible-playbook -i hosts  -u ubuntu -b  --private-key=/var/jenkins_home/ansible/devepo2.pem --extra-vars master=kibana playbook.yml"
		sh "ansible-playbook -i hosts  -u ubuntu -b  --private-key=/var/jenkins_home/ansible/devepo2.pem --extra-vars master=metricbeat playbook.yml"
		}
            }
        }            
    }
}
