def ls_command  
pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('checkout'){
            steps {
                script {
                    cleanWs()
                    git credentialsId: 'ea741a94-9357-426e-aa44-19f7370634c2', url: 'https://github.com/ystroog/devops.git'
                    sh 'ls'
                }
            }
        }
        stage ('Ansible Playbook inserting host') {
            Steps {
                dir ('Devops/') {
                    script {
                    targetIP = input(
                            id: 'userInput', message: 'ip add',
                            parameters: [
                                string(defaultValue: '0.0.0.0',
                                       description: 'ip address',
                                       name: 'IP')]) 
                    }
                }
            }
        }
        stage ('Running Playbook') {
             steps {
                 script {
                    sh "cd /&& cd /var/jenkins_home/ && ls"
                    sh "echo $HOST >> hosts"
                    sh "/usr/bin/ansible-playbook -i hosts  -b --private-key=/var/jenkins_home/ansible/els/devepo2.pem /var/jenkins_home/ansible/els/docker_config.yml"
                    sh 'rm hosts'
                   }
               }
           }
    }
}
